
<%= form_for @post do |f| %>

	<% if @post.errors.any? %>
		<ul>
			<% @post.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>	
	<% end %>

    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.label :title %>
            <h2>title</h2>
            <p><%= f.text_field :title, class:"form-control", placeholder:"Min 5" %></p>

            <p class="help-block text-danger"></p>
        </div>
    </div>
    
   
    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
        <p><%= f.label :body %></p>
        <h2>Your Post</h2>
            <p><%= f.text_area :body, class:"form-control", placeholder:"Min 20 Caracters"%></p>
            
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <br>
    <div id="success"></div>
    <div class="row">
        <div class="form-group col-xs-12">
            
            <%= f.submit class:"btn btn-default"%>
        </div>
    </div>

<% end %>                    
