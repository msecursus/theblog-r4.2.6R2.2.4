 <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header header2">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1><%= @post.title %></h1>
                        
                        <span class="meta"><%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: "SURE ??? Delete ???"} %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

 <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <p><%= @post.body %></p>
					<% if @post.comments.count > 0 %>
	                    <hr />
							<h3>All Comments:</h3>
	                    <hr />

	                    <%= render @post.comments.order("created_at DESC") %>
                    <% end %>
                </div>
            </div>
        </div>
    </article>

    <small><%= params[:id] %> <%= link_to 'Back', posts_path %></small>
 <!-- Form -->
    <div class="lightbg" style="background-color:lightgreen;">
	    <div class="container">
	        <div class="row">
	            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
	               <h3>Comment Something</h3>
	                <%= form_for [@post, @post.comments.build] do |f| %>
	                    <div class="row control-group">
	                        <div class="form-group col-xs-12 floating-label-form-group controls">
	                            <label>Name</label>
	                            <%= f.text_field :name, class:"form-control", placeholder:"Name"%>
	                            
	                        </div>
	                    </div>
	                    
	                    
	                    <div class="row control-group">
	                        <div class="form-group col-xs-12 floating-label-form-group controls">

	                            <%= f.text_area :body, class:"form-control", placeholder:"Your Comment", id:"message" %>
	                            
	                        </div>
	                    </div>
	                    <br>
	                    <div id="success"></div>
	                    <div class="row">
	                        <div class="form-group col-xs-12">
	                        	<%= f.submit class:"btn btn-default"%>
	                            
	                        </div>
	                    </div>
	                <% end %>
	            </div>
	        </div>
	    </div>
	</div>






